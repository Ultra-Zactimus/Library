@{
  Layout = "_Layout";
}

@using Library.Models;

<h1>Catalog</h1>

@if (@Model.Count == 0)
{
  <h3>There are no Catalogs</h3>
} 

<ul>
  @foreach(Catalog catalog in Model)
  {
    <li>@Html.ActionLink($"{catalog.Ticket}", "Details", new { id = catalog.CatalogId })</li>
  }
</ul>

<p>@Html.ActionLink("Add New Catalog", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>