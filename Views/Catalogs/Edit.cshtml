@{
  Layout = "_Layout";
}

@model Library.Models.Catalog

<h2>Edit</h2>

<h4>Edit this catalog: @Html.DisplayFor(model => model.Ticket)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.CatalogId)

  @Html.LabelFor(model => model.Ticket)
  @Html.EditorFor(model => model.Ticket)

  <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back To Catalogs", "Index")</p>